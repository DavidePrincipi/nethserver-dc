[Match]
Virtualization=yes
Name=host0

[Network]
Address={use Net::IPv4Addr; $OUT=$nsdc{'IpAddress'} . '/' . Net::IPv4Addr::ipv4_msk2cidr($nsdc{'IpMask'});}

{
    use esmith::NetworksDB;
    my $ndb = esmith::NetworksDB->open_ro(); 
    @gateway = map { ($_->prop('role') eq 'green' && defined $_->prop('gateway')) ? $_->prop('gateway') : () } $ndb->bridges;
    if($gateway[0]) {
        $OUT = "[Route]\n";
        $OUT .= "Gateway=$gateway[0]\n";
    }
}


